@{
  Layout = "_Layout";
}

@model Factory.Models.Machine

<h1>Add a New Machine</h1>
<hr/>
<div class="content">
  @using (Html.BeginForm())
  {
    <div class="form-group">
      @Html.LabelFor(model => model.Name)
      @Html.TextBoxFor(model => model.Name, new { @class = "form-control", @required = true})
    </div>
    <div class="form-group">
      @Html.LabelFor(model => model.Function)
      @Html.TextBoxFor(model => model.Function, new { @class = "form-control", @required = true})
    </div>
    <div class="form-group">
      @Html.LabelFor(model => model.ConstructionDate)
      @Html.TextBoxFor(model => model.ConstructionDate, new { @class = "form-control", @type="date", @required = true})
    </div>
    <div class="form-group">
      @Html.Label("Select Engineer")
      @Html.DropDownList("EngineerId", null,  new { @class="form-control"})
    </div>
    <input type="submit" value="Add New Machine" class="btn btn-success" />
  }
  <hr />
  <p>@Html.ActionLink("Home", "Index", "Home")</p>
</div>